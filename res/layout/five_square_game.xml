    </TableLayout>

    <!--Reset Button-->
    <Button

        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="reset"
        android:onClick="resetButton"/>

</LinearLayout>